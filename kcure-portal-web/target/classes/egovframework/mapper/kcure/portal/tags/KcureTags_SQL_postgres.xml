<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="KcureTags">

	<resultMap id="ComCdDetail" type="kcure.portal.cmn.tags.service.impl.ComCdDetailVo" />
	
	<!-- 시스템 로그 목록 조회 -->
	<select id="searchCommonCodeDetailList" parameterType="kcure.portal.cmn.tags.service.impl.ComCdDetailVo" resultMap="ComCdDetail">
			<![CDATA[
			SELECT DETL_CD, DETL_CD_NM
			FROM KCURE_COM_CD
			WHERE GRP_CD = #{grpCd}
			]]>
			
			<if test="detlCd != null and detlCd != ''">
			 AND DETL_CD LIKE CONCAT ('%', #{detlCd},'%') 
			</if>
			
			<![CDATA[
			AND CD_USE_YN = 'Y'
			ORDER BY CD_OPUT_ORD
			]]>
	</select>

</mapper>