<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MnuDvz">
	<select id="selectMenuManageList" parameterType="comDefaultVO" resultType="egovMap">
		SELECT
			VSLZ_MENU_ID
			, LNKG_MENU_ID
			, HGHR_VSLZ_MENU_ID
			, VSLZ_MENU_NM
			, VSLZ_MENU_EXPL_CONT
			, SMRY_STATS_NO
			, APRC_AUTH_SPCD
			, VSLZ_MENU_ORD
			, USE_YN
			, FRST_REGP_ID
			, FRST_RGST_DT
			, LAST_MODP_ID
			, LAST_MODF_DT
			, MENU_URI_ADDR
		FROM PORTAL.KCURE_SVC_VSLZ_MENU
	</select>

	<!-- 총건수 조회 -->
	<select id="selectMenuManageListTotCnt" parameterType="comDefaultVO" resultType="int">
		SELECT
			COUNT(1) AS totcnt
		FROM PORTAL.KCURE_SVC_VSLZ_MENU
	</select>

	<insert id="insertMenuManage" parameterType="egovMap">
		INSERT INTO PORTAL.KCURE_SVC_VSLZ_MENU
		(
			VSLZ_MENU_ID, LNKG_MENU_ID, HGHR_VSLZ_MENU_ID, VSLZ_MENU_NM
			, VSLZ_MENU_EXPL_CONT, SMRY_STATS_NO, APRC_AUTH_SPCD, VSLZ_MENU_ORD
			, USE_YN, MENU_URI_ADDR
			, FRST_REGP_ID, FRST_RGST_DT, LAST_MODP_ID, LAST_MODF_DT
		)
		VALUES
		(
		#{vslzMenuId}, #{lnkgMenuId}, #{hghrVslzMenuId}, #{vslzMenuNm}
		, #{vslzMenuExplCont}, #{smryStatsNo}, #{aprcAuthSpcd}, #{vslzMenuOrd}
		, #{useYn}, #{menuUriAddr}
		, #{userId}, now(), #{userId}, now()
		)
	</insert>

	<delete id="deleteMenuManage" parameterType="egovMap">
		DELETE FROM PORTAL.KCURE_SVC_VSLZ_MENU
		WHERE VSLZ_MENU_ID = #{vslzMenuId}
	</delete>
</mapper>